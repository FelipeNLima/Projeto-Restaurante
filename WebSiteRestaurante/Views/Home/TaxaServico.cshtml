@model IList<WebSiteRestaurante.Models.TaxaServicoModel>

@{
    ViewBag.Title = "TaxaServico";
    Layout = "~/Views/Home/Menu.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="offset-1 col-md-10" style="margin-top: 10px; margin-bottom: 10px">
            <h4><b>Relatório Taxa de Serviço por Período De: @ViewBag.dataInicial.ToShortDateString() á @ViewBag.dataFinal.ToShortDateString()</b></h4>
        </div>
    </div>
</div>
<div class="panel-body">
    <div class="row">
        <div class="offset-1 col-md-10">
            <table class="table">
                <tr style="background-color:lightgray">
                    <th>Nome do Garçom</th>
                    <th>Valor da Taxa de Serviço</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.usuario.nome)
                        </td>
                        <td>
                            @item.valor.ToString("N")
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="row">
        <div class="offset-1 col-md-10">
            @Html.ActionLink("GERAR PDF", "ReportViewerTaxaServico", new { gerarPDF = true, dataInicial = ViewBag.dataInicial, dataFinal = ViewBag.dataFinal }, new { target = "_blank", type = "button", @class = "btn btn-primary btn-sm" })
        </div>
    </div>
</div>
    </div>
