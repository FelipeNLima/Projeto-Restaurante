@model WebSiteRestaurante.Models.LoginModel

@{
    ViewBag.Title = "Login";
    var loginErrado = false;

    if (TempData.ContainsKey("LoginErrado"))
    {
        loginErrado = bool.Parse(TempData["LoginErrado"].ToString());
    }

    if (loginErrado == true)
    {
        <script type="text/javascript">
            alert('Login inváido!');
        </script>
    }
}

<link href="~/CSS/Login.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken();

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <body class="bodylogin">
        <div class="container"></div>
        <div class="form-login">
            <img src="/Imagens/fundo.jpg" class="imglogo" alt="logo" id="logo" />
            <h2 class="form-login-heading"></h2>

            <label for="inputUsuario" style="font-weight:bold">Usuario</label>
            @Html.TextBoxFor(a => a.login, new { @class = "form-control", placeholder = "Digite Seu Usuario", autofocus = true })
            @Html.ValidationMessageFor(a => a.login, "", new { @class = "text-danger" })

            <label for="inputSenha" style="font-weight:bold">Senha</label>
            @Html.PasswordFor(a => a.senha, new { @class = "form-control", placeholder = "Digite sua Senha" })
            @Html.ValidationMessageFor(a => a.senha, "", new { @class = "text-danger" })

            <input type="submit" value="Entrar" class="btn btn-lg btn-primary" style="width: 300px; margin-top: 10px" />

        </div>
    </body>
}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
}
