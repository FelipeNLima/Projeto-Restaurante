@model WebSiteRestaurante.Models.ConsumoModel

@{
    ViewBag.Title = "RelatorioEstoqueSaida";
    Layout = "~/Views/Home/Menu.cshtml";
}

@using (Html.BeginForm("EstoqueSaida", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    <body>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Relatório Estoque de Saída por Período</h2>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <label for="dataInicial" class="col-sm-2 control-label">Data Inicial:</label>
                    <div class="col-sm-10">
                        <input type="date" class="form-control" id="dataInicial" name="dataInicial" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="dataFinal" class="col-sm-2 control-label">Data Final</label>
                    <div class="col-sm-10">
                        <input type="date" class="form-control" id="dataFinal" name="dataFinal" required>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Gerar Relatório</button>
                    </div>
                </div>
            </div>
        </div>
    </body>
}


