@model WebSiteRestaurante.Models.TaxaServicoModel

@{
    ViewBag.Title = "RelatorioTaxaServico";
    Layout = "~/Views/Home/Menu.cshtml";

    var lista = ViewBag.garcom as List<WebSiteRestaurante.Models.UsuarioModel>;
}

@using (Html.BeginForm("TaxaServico", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    <body>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Relatório Taxa de Serviço por Pedido/Período</h2>
            </div>
            <div class="panel-body">

                <div class="form-group">
                    <label for="nomegarcom" class="col-sm-2 control-label">Nome Garçom</label>
                    <div class="col-sm-10">
                        <select class="form-control" id="nomegarcom" name="nomegarcom" required>
                            <option value="0">TODOS</option>
                            @foreach (var item in lista)
                            {
                                <option value="@item.id_usuario">@item.nome</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="dataInicial" class="col-sm-2 control-label">Data Inicial:</label>
                    <div class="col-sm-10">
                        <input type="date" class="form-control" id="dataInicial" name="dataInicial" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="dataFinal" class="col-sm-2 control-label">Data Final</label>
                    <div class="col-sm-10">
                        <input type="date" class="form-control" id="dataFinal" name="dataFinal" required>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Gerar Relatório</button>
                    </div>
                </div>
            </div>
        </div>
    </body>
}